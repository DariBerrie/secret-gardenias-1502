  <div class="plant-card" 
    style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= plant.image_url %>');">
    <div class="container">
      <h1><%= plant.name %></h1>
    </div>
     <%= link_to garden_plant_path(@garden, plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-remove-link", style: "color: white;" do %>
